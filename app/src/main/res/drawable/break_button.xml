<?xml version="1.0" encoding="utf-8"?>

<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="@dimen/roundButtonInsetTopAndBottom"
    android:insetTop="@dimen/roundButtonInsetTopAndBottom"
    android:insetLeft="@dimen/roundButtonPaddingLeftAndRight"
    android:insetRight="@dimen/roundButtonPaddingLeftAndRight">
    <selector>
        <!--Button pressed style-->
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="@color/ic_break_color_lighter" />

                <corners android:radius="@dimen/roundButtonRadius" />
                <padding
                    android:bottom="@dimen/roundButtonPaddingTopAndBottom"
                    android:left="@dimen/roundButtonPaddingLeftAndRight"
                    android:right="@dimen/roundButtonPaddingLeftAndRight"
                    android:top="@dimen/roundButtonPaddingTopAndBottom" />
            </shape>
        </item>

        <!--Button style-->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/ic_break_color" />

                <corners android:radius="@dimen/roundButtonRadius" />
                <padding
                    android:bottom="@dimen/roundButtonPaddingTopAndBottom"
                    android:left="@dimen/roundButtonPaddingLeftAndRight"
                    android:right="@dimen/roundButtonPaddingLeftAndRight"
                    android:top="@dimen/roundButtonPaddingTopAndBottom" />
            </shape>
        </item>
    </selector>
</inset>
